<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dummock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_200</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/vazir_regular_fd</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

    <style name="DButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

    <style name="DButton.Primary.Active" parent="DButton">
        <item name="backgroundColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="DButton.Outline.Primary.Active" parent="DButton.Outline">
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DButton.Outline.Primary.InActive" parent="DButton.Outline">
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="iconTint">@android:color/darker_gray</item>
    </style>

    <style name="DButton.Outline.InActive" parent="DButton.Outline">
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
    </style>

    <style name="CustomCardCornerRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomCornerShapeAppearanceOverlay</item>
    </style>

    <style name="CustomCornerShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>